{
  "name": "grinder",
  "version": "0.1.0",
  "description": "Windows productivity tracker with session timer, activity monitoring, and gamification",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "preview": "vite preview",
    "electron:dev": "npm run build:electron && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "electron:build": "npm run build && electron-builder --config electron-builder.yml",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "better-sqlite3": "^11.5.0",
    "dotenv": "^16.6.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "framer-motion": "^11.11.0",
    "recharts": "^2.13.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.grinder.app",
    "productName": "Grinder",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
